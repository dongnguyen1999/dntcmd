#require init
#!/bin/bash
#if .bashrc_dnt is exist, recover before init again
if [ -f "$HOME/.bashrc_dnt" ]; then
    ./recover_bashrc.dnt
fi

#clone ~/.bashrc and append it with init_script
./clone_bashrc.dnt
cat ./init_script.dnt >> ~/.bashrc

#reset terminal
gnome-terminal
kill -s KILL `ps -o ppid= -p $$`